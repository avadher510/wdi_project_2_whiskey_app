<form method="POST" action="/whiskeys">
  <div class="form-group">
    <label for="image">URL of Image</label>
    <input type="text" class="form-control" id="image" placeholder="e.g. https://img.name ofwebsite.com/000/imagename.jpg" name="image">
  </div>
  <div class="form-group">
    <label for="origin">Origin of Whiskey</label>
    <select class="form-control" id="origin" name="origin">
      <option>America</option>
      <option>Canada</option>
      <option>India</option>
      <option>Japan</option>
      <option>Scotland</option>
    </select>
  </div>
  <div class="form-group">
    <label for="type">Type of Whiskey</label>
    <select class="form-control" id="type" name="type">
      <option>Single Malt Whiskey</option>
      <option>Grain Whiskey</option>
      <option>Blended Whiskey</option>
      <option>Single Pot Still Whiskey</option>
      <option>Bourbon</option>
      <option>Tennessee Whiskey</option>
      <option>Rye Whiskey</option>
      <option>Corn Whiskey</option>
    </select>
  </div>
  <div class="form-group">
    <label for="brand">Brand of Whiskey</label>
    <input type="text" class="form-control" id="brand" placeholder="Dalmore, Jack Daniel's etc." name="brand">
  </div>
  <div class="form-group">
    <label for="variant">Variant of Whiskey</label>
    <input type="text" class="form-control" id="variant" placeholder="e.g. In Glenmorangie Pride 1974, type 'Pride 1974'" name="variant">
  </div>
  <div class="form-group">
    <label for="age">Age of Whiskey</label>
    <input type="number" class="form-control" id="age" placeholder="age of whiskey e.g. 20" name="age">
  </div>
  <div class="form-group">
    <label for="abv">Percentage Alcohol</label>
    <input type="number" class="form-control" id="abv" placeholder="ABV Value e.g. 40" name="abv">
  </div>
  <div class="form-group">
    <label for="price">Price per Bottle</label>
    <input type="number" class="form-control" id="price" placeholder="price to nearest £ e.g 60.55 = £61" name="price">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
