<p>Created By: <%= whiskey.createdBy.username %></p>

<% if (locals.isLoggedIn) { %>
<a href="/whiskeys/<%= whiskey.id %>/edit">Edit</a>

<form action="/whiskeys/<%= whiskey.id %>" method="POST">
